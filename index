    <script>
        const folders = ['qr_codes', 'other_folder']; // Add as many folder names as needed
        let found = false;
        const certificateImage = document.getElementById('CertificateImage');

        function displayImage() {
            const fileName = document.getElementById('fileName').value.trim();
            const email = document.getElementById('email').value.trim();

            if (!fileName || !email) {
                alert("Please enter both the report number and your email address.");
                return;
            }

            checkImageInFolder(0, fileName);
        }

        function checkImageInFolder(index, fileName) {
            if (index >= folders.length) {
                if (!found) {
                    console.error('Certificate not found in any folder.');
                    certificateImage.style.display = 'none';
                    alert("Certificate not found. Please check the report number.");
                }
                return;
            }

            const folder = folders[index];
            const imageUrl = `https://verify.jgtl.org/${folder}/${fileName}.png`;
            const img = new Image();
            img.src = imageUrl;

            img.onload = function() {
                certificateImage.src = imageUrl;
                certificateImage.style.display = 'block';
                found = true;
            };

            img.onerror = function() {
                checkImageInFolder(index + 1, fileName);
            };
        }
    </script>

